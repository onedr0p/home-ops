{
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "semanticCommitType": "feat!"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "semanticCommitType": "feat"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "semanticCommitScope": "images"
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "semanticCommitScope": "charts"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitType": "ci"
    }
  ]
}
