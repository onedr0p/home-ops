{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": ["Separate PRs for main cluster"],
      "matchFileNames": [
        "**/kubernetes/main/**",
        "**/ansible/main/**",
        "**/terraform/main/**"
      ],
      "additionalBranchPrefix": "main-"
    },
    {
      "description": ["Separate PRs for storage cluster"],
      "matchFileNames": [
        "**/kubernetes/storage/**",
        "**/ansible/storage/**",
        "**/terraform/storage/**"
      ],
      "additionalBranchPrefix": "storage-"
    }
  ]
}
