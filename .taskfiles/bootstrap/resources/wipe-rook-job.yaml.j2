---
apiVersion: batch/v1
kind: Job
metadata:
  name: &app wipe-rook
  namespace: default
  labels:
    app.kubernetes.io/name: *app
spec:
  parallelism: {{ ENV.TOTAL_NODES }}
  template:
    metadata:
      labels:
        app.kubernetes.io/name: *app
    spec:
      restartPolicy: Never
      containers:
        - name: wipe
          image: docker.io/library/alpine:latest
          command: ["/bin/sh", "-c"]
          args:
            - apk add --no-cache sgdisk util-linux util-linux-misc parted device-mapper;
              rm -rf /mnt/host_var/lib/rook;
              sgdisk --zap-all {{ ENV.ROOK_DISK }};
              dd if=/dev/zero of={{ ENV.ROOK_DISK }} bs=1M count=100 oflag=direct;
              blkdiscard {{ ENV.ROOK_DISK }};
              partprobe {{ ENV.ROOK_DISK }};
          volumeMounts:
            - name: host-var
              mountPath: /mnt/host_var
          securityContext:
            privileged: true
          resources: {}
      topologySpreadConstraints:
        - maxSkew: 1
          labelSelector:
            matchLabels:
              app.kubernetes.io/name: *app
          topologyKey: kubernetes.io/hostname
          whenUnsatisfiable: DoNotSchedule
      volumes:
        - name: host-var
          hostPath:
            path: /var
