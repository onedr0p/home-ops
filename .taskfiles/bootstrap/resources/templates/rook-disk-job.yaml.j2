---
apiVersion: batch/v1
kind: Job
metadata:
  name: {{ ENV.JOB }}
  namespace: {{ ENV.NS }}
spec:
  ttlSecondsAfterFinished: 3600
  template:
    spec:
      automountServiceAccountToken: false
      restartPolicy: Never
      nodeName: {{ ENV.NODE }}
      containers:
        - name: main
          image: docker.io/library/alpine:latest
          command: ["/bin/sh", "-c"]
          args:
            - apk add --no-cache sgdisk util-linux util-linux-misc parted device-mapper;
              sgdisk --zap-all {{ ENV.ROOK_DISK }};
              dd if=/dev/zero of={{ ENV.ROOK_DISK }} bs=1M count=100 oflag=direct;
              blkdiscard {{ ENV.ROOK_DISK }};
              partprobe {{ ENV.ROOK_DISK }};
          securityContext:
            privileged: true
          resources: {}
