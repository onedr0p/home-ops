---
version: "3"

services:
  cadvisor:
    image: gcr.io/google-containers/cadvisor:v0.36.0
    restart: unless-stopped
    ports:
      - 8080:8080
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk:/dev/disk/:ro
    labels:
      - com.centurylinklabs.watchtower.enable=true
